<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JeetEducationBus" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_sub</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Hint Text Color -->
        <item name="android:textColorHint">@color/gray</item>
    </style>
    <style name="OriginCheckBox" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/btn_stroke</item>
    </style>
    <style name="CalendarDateTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/font_color_default</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <style name="CalendarHeaderTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/font_color_default</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_size_large</item>
    </style>

    <style name="TextStyleBNV">
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textColor">@color/font_color_default</item>
    </style>
</resources>